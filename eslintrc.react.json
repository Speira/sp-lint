{
  "extends": [
    "plugin:react/recommended",
    "plugin:react-hooks/recommended",
    "./.eslintrc.cjs"
  ],
  "env": {
    "browser": true,
    "jest": true
  },
  "plugins": ["react"],
  "rules": {
    "simple-import-sort/imports": "error",
    "simple-import-sort/exports": "error"
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "overrides": [
    {
      "files": ["*.js", "*.jsx", "*.ts", "*.tsx"],
      "rules": {
        "simple-import-sort/imports": [
          "error",
          {
            "groups": [
              ["^react", "^@?\\w"],
              ["^(~)(.*|$)"],
              ["^\\u0000"],
              ["^\\.\\.(?!/?$)", "^\\.\\./?$"],
              ["^\\./(?=.*/)(?!/?$)", "^\\.(?!/?$)", "^\\./?$"],
              ["^.+\\.?(css|scss)$"]
            ]
          }
        ],
        "react/prop-types": "off",
        "react/react-in-jsx-scope": "off"
      }
    }
  ]
}
